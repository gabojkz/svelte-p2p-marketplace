{
  "name": "svelte-p2p-market",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check",
    "check:watch": "svelte-kit sync && svelte-check --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node scripts/seed-categories.js",
    "db:seed:users": "node scripts/seed-users.js",
    "db:seed:listings": "node scripts/seed-listings.js",
    "db:seed:allowedDomains": "node scripts/seed-allowed-domains.js",
    "db:seed:reviews": "node scripts/seed-reviews.js",
    "db:seed:all": "npm run db:seed && npm run db:seed:users && npm run db:seed:listings && npm run db:seed:allowedDomains && npm run db:seed:reviews",
    "db:update-passwords": "node scripts/update-passwords.js",
    "db:reset": "node scripts/reset-db.js",
    "db:check-columns": "node scripts/check-duplicate-columns.js",
    "db:verify-password": "node scripts/verify-password.js",
    "podman:up": "podman compose -f podman-compose.yaml up -d",
    "podman:down": "podman compose -f podman-compose.yaml down",
    "podman:logs": "podman compose -f podman-compose.yaml logs -f",
    "deploy": "wrangler pages deploy .svelte-kit/cloudflare",
    "cf:dev": "wrangler pages dev .svelte-kit/cloudflare"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251225.0",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/enhanced-img": "^0.9.2",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "drizzle-kit": "^0.31.8",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "vite": "^7.2.6",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@inlang/paraglide-js": "^2.7.1",
    "@inlang/paraglide-sveltekit": "^0.16.1",
    "@neondatabase/serverless": "^1.0.2",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.9",
    "dompurify": "^3.3.1",
    "drizzle-orm": "^0.45.1",
    "isomorphic-dompurify": "^2.30.0",
    "postgres": "^3.4.7",
    "svelte-fa": "^4.0.4",
    "validator": "^13.15.26",
    "zod": "^4.3.5"
  }
}
